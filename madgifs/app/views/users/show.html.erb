<h1>Profile Page</h1>

<h2><%= @user.name %></h2>
<p><%= @user.email %></p>
<p>Score: <%= @user.score %></p>

<% if current_user == @user %>
  <%= link_to 'Edit Profile', edit_user_path(@user) %>
  <%= link_to 'Delete Profile', @user, method: :delete, data: {confirm: 'Are you sure you wish to delete your profile?'} %>
<% end %>

